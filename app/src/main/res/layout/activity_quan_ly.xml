<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuanLyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMangHinhQuanLy"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#ECBB29"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Quản Lý"
        app:titleTextColor="@color/white"
        tools:layout_editor_absoluteX="0dp"></androidx.appcompat.widget.Toolbar>
    <androidx.cardview.widget.CardView
        android:id="@+id/CVQuanLy"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarMangHinhQuanLy"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="3"
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_QuanLy_ThemSP"
                android:layout_weight="1"
                android:src="@drawable/ic_shopping_cart_24"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>

            <ImageView
                android:id="@+id/img_QuanLy_SuaSP"
                android:layout_weight="1"
                android:src="@drawable/ic_shopping_cart_24"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>

            <ImageView
                android:id="@+id/img_QuanLy_XoaSP"
                android:layout_weight="1"
                android:src="@drawable/ic_shopping_cart_24"
                android:layout_width="100dp"
                android:layout_height="100dp"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>